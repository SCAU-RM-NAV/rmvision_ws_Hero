<?xml version="1.0" encoding="utf-8"?>

<robot name="rm_gimbal"
  xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:arg name="xyz" default="0.10 0 0.05" />
  <xacro:arg name="rpy" default="0 0 0" />


  <link name="world" />

  <link name="gimbal_link" />

  <joint name="gimbal_joint" type="floating">
    <parent link="world" />
    <child link="gimbal_link" />
  </joint>

  <link name="camera_link_A" />

  <joint name="camera_joint_A" type="fixed">
    <origin xyz_a="$(arg xyz_a)" rpy_a="$(arg rpy_a)" />
    <parent link="gimbal_link" />
    <child link="camera_link_A" />
    <axis xyz="0 0 0" />
  </joint>

  <link name="camera_link_B" />

  <joint name="camera_joint_B" type="fixed">
    <origin xyz_b="$(arg xyz_b)" rpy_b="$(arg rpy_b)" />
    <parent link="gimbal_link" />
    <child link="camera_link_B" />
    <axis xyz="0 0 0" />
  </joint>

  <link name="camera_optical_frame_A" />

  <joint name="camera_optical_joint_A" type="fixed">
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}" />
    <parent link="camera_link_A" />
    <child link="camera_optical_frame_A" />
  </joint>

  <link name="camera_optical_frame_B" />

  <joint name="camera_optical_joint_B" type="fixed">
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}" />
    <parent link="camera_link_B" />
    <child link="camera_optical_frame_B" />
  </joint>

</robot>
